<div class ="row">
  <div class="large-12 columns">
    <div class="nav-bar right">
      <ul class="button-group">
        <li><%= link_to('Home', root_path, :class => 'button') %></li>
        <li><%= link_to('Users', users_path, :class => 'button') %></li>
        <% if @auth.present? %>
          <li><%= link_to('Stocks', stocks_path, :class => 'button') %></li>
        <% end %>
        <% if @auth.present? %>
          <% det = @auth.email %>
          <li><%= link_to(det, login_path, :method => :delete, :class => 'button alert useremail') %></li>
          <li><%= @auth.balance :class => 'newbal' %></li>
        <% else %>
          <li><%= link_to('Login', login_path, :class => 'button success') %></li>
        <% end %>
      </ul>
    </div>
